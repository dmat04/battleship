{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "paths": {
      "@battleship/common/*": ["./common"]
    }
  },
  "files": [],
  "references": [
    { "path": "./common" },
    { "path": "./server" },
    { "path": "./client" }
  ]
}
