{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "incremental": true,
    "module": "node16",
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./packages",
    "paths": {
      "@battleship/common/*": ["common/build/*"]
    },
    "types": [
      "vitest/globals", "@testing-library/jest-dom", "vitest"
    ]
  },
  "ts-node": {
    "transpileOnly": false,
    "esm": true
  }
}