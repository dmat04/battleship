{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "incremental": true,
    "module": "node16",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@battleship/common/*": ["./common"],
      "@battleship/server/*": ["./server"],
      "@battleship/client/*": ["./client"],      
    },
    "types": [
      "vitest/globals", "@testing-library/jest-dom", "vitest"
    ]
  },
  "ts-node": {
    "transpileOnly": false,
  }
}